<Window x:Class="Appearance.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Appearance" xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        Title="TileViewControl - Appearance" Height="450" Width="800">
    <Grid>
        <syncfusion:TileViewControl Name="tileViewControl"
                                    FlowDirection="RightToLeft" 
                                    Height="300" Width="400">
            <syncfusion:TileViewItem BorderBrush="Green" BorderThickness="4" Background="Blue" Foreground="Red" Header="Item 1" Content="Content 1"/>
            <syncfusion:TileViewItem BorderBrush="Yellow" FlowDirection="LeftToRight" BorderThickness="4" Background="Red" Foreground="Blue" Header="Item 2" Content="Content 2"/>
            <syncfusion:TileViewItem BorderBrush="Red" BorderThickness="4" Background="Yellow" Foreground="Green" Header="Item 3" Content="Content 3"/>
            <syncfusion:TileViewItem BorderBrush="Blue" BorderThickness="4" Background="Green" Foreground="Yellow" Header="Item 4" Content="Content 4"/>
        </syncfusion:TileViewControl>
    </Grid>
</Window>
